{
  "name": "node-apis",
  "version": "1.0.0",
  "description": "node-apis",
  "main": "server/server.js",
  "scripts": {
    "dev:build": "webpack --watch",
    "dev:server": "nodemon --watch build --exec \"node build/bundle.js\"",
    "dev": "npm-run-all --parallel dev:*",
    "build": "webpack",
    "test": "jest --forceExit",
    "cover": "jest --coverage --forceExit",
    "coveralls": "npm run cover && cat ./coverage/lcov.info | coveralls",
    "start": "npm run build && node build/bundle.js"
  },
  "babel": {
    "env": {
      "test": {
        "presets": ["env"]
      }
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": ["**/src/**/*.js"]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yuttasakcom/NodeES6.git"
  },
  "keywords": ["node-apis", "node-es6"],
  "author": "Yuttasak Pannawat<yuttasakcom@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yuttasakcom/NodeES6/issues"
  },
  "homepage": "https://github.com/yuttasakcom/NodeES6#readme",
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "morgan": "^1.9.0",
    "webpack": "^3.10.0",
    "webpack-node-externals": "^1.6.0"
  },
  "devDependencies": {
    "coveralls": "^3.0.0",
    "jest": "^21.2.1",
    "nodemon": "^1.12.5",
    "npm-run-all": "^4.1.2",
    "supertest": "^3.0.0"
  }
}
